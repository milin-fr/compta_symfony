{% extends 'base.html.twig' %}

{% block title %}Nouvelle facture{% endblock %}

{% block body %}
    <h1>Ajouter une nouvelle facture</h1>
    <form action="{{ path('bill_post') }}" method="POST" id="bill--form">
        <div id="work-type--form">
            <label for="work-type">Type de charges :</label>
            <select id="work-type" name="work-type" required="true">
                <option value="" disabled selected>Selectionez le type de travaux</option>
                {% for workType in workTypes %}
                    <option value="{{ workType.title }}">{{ workType.title }}</option>
                {% endfor %}
            </select>
        </div>
        <div id="company--form">
            <label for="company">Entreprise :</label>
            <input id="company" name="company" type="text" list="company--list" required="true" data-url="{{ path('company_get_by_work_type') }}" disabled autocomplete="off">
            <datalist id="company--list">
                <!-- JS inserts company list here depending on work type selected -->
            </datalist>
        </div>
        <div id="bill-status--form">
            <label for="bill--status">L’état de la facture :</label>
            <select id="bill--status" name="bill--status" required="true" disabled>
                {% for billStatus in billStatuses %}
                    <option value="{{ billStatus.title }}">{{ billStatus.title }}</option>
                {% endfor %}
            </select>
        </div>
        <div id="bill-price--form">
            <label for="bill--price-euro">Prix :</label>
            <input type="number" name="bill--price-euro" id="bill--price-euro" pattern="[0-9]" min="0" required="true" disabled>
            <label for="bill--price-cent">,</label>
            <input type="number" name="bill--price-cent" id="bill--price-cent" pattern="[0-9]" min="0" max="99" required="true" disabled>
        </div>
        <div id="bill-description--form">
            <label for="bill--description">Descriptif de la facture :</label>
            <textarea name="bill--description" id="bill--description" cols="50" rows="5" required="true" disabled></textarea>
        </div>
        <input type="submit" value="Enregistrer">
    </form>
{% endblock %}
{% block javascripts %}
	<script src="{{ asset('js/billApp.js') }}"></script>
{% endblock %}