{% extends 'base.html.twig' %}

{% block title %}La liste des factures{% endblock %}

{% block body %}
    <h1 class="h1 text-center">La liste des factures</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Description</th>
                <th>Status</th>
                <th>Type de travaux</th>
                <th>Entreprise</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bill in bills %}
            <tr>
                <td>{{ bill.description }}</td>
                <td>{{ bill.status.title }}</td>
                <td>{{ bill.company.workType.title }}</td>
                <td>{{ bill.company.title }}</td>
                <td>{{ bill.priceEuro }},{{ "%02d"|format(bill.priceCent) }}â‚¬</td>
                <td>
                    <a href="{{ path('bill_edit', {'id': bill.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de factures</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
